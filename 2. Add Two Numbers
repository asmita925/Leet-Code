/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* addTwoNumbers(ListNode* l1, ListNode* l2) {
        
        int sum = 0, carry = 0;
        ListNode *temp = NULL, *prev = NULL, *result = NULL;
        
        while (l1 || l2)
        {
            sum = carry + (l1 ? l1->val:0) + (l2 ? l2->val:0);
            
            if (sum >= 10)
            {
                carry = sum /10;
                sum = sum%10;
            } else {
                carry = 0;
            }
            
            temp = new ListNode(sum);
            
            if (result == NULL)
            {
                result = temp;
            } else {
                prev->next =  temp;
            }
            
            prev = temp;
            
            if (l1)
            {
                l1 = l1->next;
            }
            
            if (l2)
            {
                l2 = l2->next;
            }
        }// end of while loop
        
        if (carry > 0)
        {
            temp = new ListNode(carry);
            prev->next = temp;
        }
        
        return result;
    } // end of function
};

