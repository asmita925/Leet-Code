/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    int maxDepth(TreeNode* root) {
        int ldepth, rdepth;
        
        if (root == NULL)
        
            return 0;
        
        
        ldepth = maxDepth(root->left);
        rdepth = maxDepth(root->right);
        
        if (ldepth > rdepth)
        
            return ldepth +1;
        } else {
            return rdepth +1;
        
        
        return 0;
    
};
